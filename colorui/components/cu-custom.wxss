/* colorui/components/cu-custom.wxss */
.custom-bar .cu-bar .content {
	position: relative;
	display: block;
	margin: auto 0;
	text-align: left;
	font-size: 16px;
	font-weight: 600;
}

.custom-bar .cu-bar {
	justify-content: unset;
}

.cu-bar .content.bold {
	font-weight: 600;
	font-size: 19px;
}

.custom-bar .border-custom {
	background-color: #ffffff;
	border-radius: 16px;
	border: 1rpx solid rgba(204, 204, 204, 0.6);
	float: right;
}

.custom-bar .cu-bar .action-group {
	position: absolute;
}

.custom-bar .cu-bar .action-group .action {
	margin: auto 0;
	margin-left: 6px;
}

.custom-bar .action:first-child>text[class*="cuIcon-"] {
	font-size: 33rpx;
	margin-left: 0.3em !important;
}

.timetable {
	pointer-events: unset !important;
}

.timetable .week {
	line-height: 18px;
    font-size: 16px;
    font-weight: 600;
    margin-top: 6px;
}

.timetable .subtitle {
	line-height: 16px;
	font-weight: 400;
	font-size: 10px;
	opacity: .8;
}
