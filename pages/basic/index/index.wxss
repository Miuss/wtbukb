/**index.wxss**/
.kcb-item {
	position: absolute;
	border-radius: 5px;
	padding: 3px;
}

.smalltext {
	line-height: 18px;
	font-size: 13px;
	font-weight: 400;
	color: #fff;
	padding-left: 2px;
}

.weekbar {
	position: fixed;
	z-index: 1;
	width: 100%;
	display: flex;
	flex-direction: row;
	background-color: rgba(243, 243, 243);
	color: rgba(0, 0, 0, .87);
	border-bottom: 4px solid rgb(236, 236, 236);
}

.class-line {
	width: 100%;
	position: absolute;
	border-bottom: 1px dashed rgb(219, 219, 219, .5);
}

.scroll {
	z-index: -1;
	background-color: #ffffff;

}

.weekbar .item:first-child {
	width: 32px !important;
	height: 44px;
	justify-content: unset;
	display: block;
	align-items: unset;
	text-align: center;
}

.weekbar .item .index {
	margin-top: 10px;
	font-weight: 600;
	font-size: 14px;
	line-height: 12px;
}

.weekbar .item .info {
	margin-top: 4px;
	font-weight: 400;
	font-size: 10px;
	opacity: .8;
}

.weekbar .item {
	width: 100px;
	height: 44px;
	font-size: 9pt;
	justify-content: unset;
	display: block;
	align-items: unset;
	text-align: center;
	position: relative;
}

.weekbar .item.active {
	color: #ffffff;
}

.weekbar .item.active:after {
	content: '';
	display: block;
	position: absolute;
	z-index: -1;
	top: 0;
	background-color: #5975ff;
	border-radius: 6px;
	left: 15%;
	top: 10%;
	width: 70%;
	height: 80%;
}

.sidebar {
	background-color: #fff;
}

.sidebar .item {
	width: 32px;
	height: 55px;
	box-sizing: border-box;
	text-align: center;
	font-size: 22rpx;
	border-bottom: 1px dashed rgb(219, 219, 219, .5);
}

.sidebar .item .index {
	font-weight: 500;
	color: #9c9c9c;
	padding: 10px 0 4px 0 !important;
}

.sidebar .item .time {
	font-weight: 600;
}

.wtbuLogo {
	text-align: center;
}

.wtbuLogo image {
	width: 80px;
	height: 80px;
	margin-top: 100px;
}

.wtbuTitle {
	font-size: 24px;
	margin-top: 20px;
}

.wtbuSubTitle {
	margin-top: 10px;
}

.wtbuInfo {
	margin-top: 10px;
}

.wtbuTitle,
.wtbuSubTitle,
.wtbuInfo {
	text-align: center;
}
