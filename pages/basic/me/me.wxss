/* pages/basic/me/me.wxss */
.bgimg-purple {
	position: fixed;
	z-index: -100;
	width: 100%;
	height: 100%;
	background: linear-gradient(180deg, #5975ff, #5975ff, #ffffff 90%);
}

.bgimg-purple.all {
	background: #5975ff;
}

.time-bg {
    position: absolute;
    font-size: 49px;
    right: 0;
    color: #fff;
    font-weight: 900;
    opacity: .2;
    z-index: 1;
    bottom: -26px;
}

.small {
	font-size: 16px;
	opacity: .9;
	font-weight: 400;
}

.user-info {
	display: flex;
	position: relative;
	margin: 1em 0 1em 0;
	padding: 24rpx;
	border-radius: 8px;
	height: 98px;
}

.user-info .avatar {
	display: flex;
	position: relative;
	transition: transform .3s;
	border-radius: 5em;
	background: #F5F5F5;
	width: 72px;
	height: 72px;
}

.user-info .avatar .icon {
	border-radius: 5em;
	width: 72px;
	height: 72px;
	background-color: #F5F5F5;
	border: 2px solid #ffffff;
}

.user-info .info {
	display: flex;
	flex-direction: column;
	justify-content: center;
	flex: 1;
	width: 100px;
	margin-left: 27rpx;
	color: #ffffff;
}

.user-info .info .title {
	font-size: 42rpx;
	font-weight: 600;
}

.user-info .info .addtime {
	font-size: 13px;
	opacity: .6;
	margin-top: 4px;
}

.user-stats-box {
	position: relative;
	padding: 24rpx;
	text-align: center;
	border-top-left-radius: 16px !important;
	border-top-right-radius: 16px !important;
}

.user-stats-box .name {
	font-size: 11px;
}

.user-stats-box .value {
	color: #000;
	font-size: 18px;
	margin-bottom: 8rpx;
}

.user-stats-box .flex-sub {
	border-right: 1px solid #eee;
}

.user-stats-box .flex-sub:last-child {
	border: 0;
}

.user-set-box {
	border-radius: 0 !important;
	margin: 0 !important;
	height: 65vh;
	background-color: #ffffff;
}

.user-set-box.cu-list.menu>.cu-item>.content>image {
	margin-bottom: 4px;
	width: 1.4em;
	height: 1.4em;
}

.user-set-box.cu-list.menu .cu-btn.content {
	font-weight: 400;
}

.bottom-modal {
	transition-duration: 0.1s !important;
	-ms-transform: scale(1);
	transform: scale(1);
}

.bottom-modal .cu-dialog {
	height: 77%;
}

.bottom-modal .cu-form-group {
	border-radius: 0.5rem;
	border: 0px;
}

.bindStuBtn {
	width: 100% !important;
	background-color: #5975ff;
	color: #ffffff;
	line-height: 1.3;
	font-size: 16px;
	font-weight: 500;
}

.info-warning {
	opacity: .8;
	font-size: .5;
}
