/* pages/message/message.wxss */
.sysNotices-list {
	padding: 18rpx;
}

.sysNotices-list .notice-item {
	position: relative;
	padding: 24rpx;
	margin-top: 82rpx;
	margin-bottom: 18rpx;
	border-radius: 8rpx;
	overflow: unset;
	transition: .2s !important;
	background-color: #ffffff;
	color: #000;
	box-shadow: 0 1px 3px 0 rgb(0 0 0 / 2%), 0 16px 32px 0 rgb(0 0 0 / 7%);
	-webkit-box-shadow: 0 1px 4px 0 rgb(0 0 0 / 10%);
	box-shadow: 0 1px 4px 0 rgb(0 0 0 / 10%);
}

.sysNotices-list .notice-item .time {
	position: absolute;
	top: -28px;
	font-size: 12px;
	opacity: .4;
	text-align: center;
	left: 0;
	width: 100%;
	line-height: 48rpx;
}

.sysNotices-list .notice-item .title {
	font-weight: 600;
	font-size: 16px;
	margin-bottom: 16rpx;
}

.sysNotices-list .notice-item .content {
	font-size: 14px;
	line-height: 21px;
	color: #4d4d4d;
}

.loadMore {
	padding: 10px;
	text-align: center;
}
